@model WorldForging.Models.WorldsDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>World</h4>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayNameFor(model => model.World.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.World.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.World.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.World.Description)
        </dd>

    </dl>
    <dl class="dl-horizontal">
        <dt>
            Races
        </dt>
        @foreach (var item in Model.Races)
        {
            <dd>
                @Html.DisplayFor(modelItem => item.Group.Entity.Name)
            </dd>
        }
        
    </dl>
    <dl class="dl-horizontal">
        <dt>
            Characters
        </dt>
        @foreach (var item in Model.Characters)
        {
            <dd>
                @Html.DisplayFor(modelItem => item.Entity.Name)
            </dd>
        }

    </dl>
    <dl class="dl-horizontal">
        <dt>
            Items
        </dt>
        @foreach (var item in Model.Items)
        {
            <dd>
                @Html.DisplayFor(modelItem => item.Entity.Name)
            </dd>
        }

    </dl>
    <dl class="dl-horizontal">
        <dt>
            Locations
        </dt>
        @foreach (var item in Model.Locations)
        {
            <dd>
                @Html.DisplayFor(modelItem => item.Entity.Name)
            </dd>
        }

    </dl>
    <dl class="dl-horizontal">
        <dt>
            Events
        </dt>
        @foreach (var item in Model.Events)
        {
            <dd>
                @Html.DisplayFor(modelItem => item.Entity.Name)
            </dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.World.WorldId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
